<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">

    <navigation-rule>
        <from-view-id>/candidates.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{candidates.createCandidate}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/candidates.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/positions.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{positions.createPosition}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/positions.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!--<navigation-rule>
        <from-view-id>/interviews.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{interviews.createInterview}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/interviews.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>-->
</faces-config>
